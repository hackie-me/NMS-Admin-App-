<resources>
    <!-- Base application theme. -->
    <style name="Theme.NMSAdminApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- Darker primary color. -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/color_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null</style>

    <style name="WindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.NMSAdminApp.Fullscreen" parent="Theme.NMSAdminApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.NMSAdminApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.NMSAdminApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>