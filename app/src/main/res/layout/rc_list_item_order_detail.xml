<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewScrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true"
        tools:ignore="SpeakableTextPresentCheck">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/BackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15sp"
                android:background="@drawable/btn_back_arrow"/>

            <TextView
                android:id="@+id/lbl_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:text="Order"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_text_secondary_dark"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/Orders_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Order Status"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/order_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="195dp"
                android:text="Complete"
                android:textSize="18sp"
                android:textColor="@color/color_text_secondary_dark"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_Orders_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Order Date"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/Order_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="185dp"
                android:text="feb 02, 2023"
                android:textSize="18sp"
                android:textColor="@color/color_text_secondary_dark"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_Orders_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Order #"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/Order_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="230dp"
                android:text="ORD-0001"
                android:textSize="18sp"
                android:textColor="@color/color_text_secondary_dark"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_Invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Invoice #"
                android:textSize="18sp"/>

            <TextView
                style="@style/txtHKGroteskmedium15"
                android:id="@+id/Invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="204dp"
                android:text=" INV-0001"
                app:drawableStartCompat="@drawable/ic_launch"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15pxh"
            android:orientation="vertical"
            android:background="@color/color_background_dark">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:layout_marginTop="@dimen/_10pxh">
            <TextView
                android:id="@+id/lbl_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Customer Detail"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_margin="@dimen/_8pxh"
            android:background="@color/color_card_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="@dimen/_5pxh"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Customer Name "
                android:textSize="19sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/customer_phone"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginStart="70sp"
                android:background="@drawable/ic_phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15pxh"
            android:orientation="vertical"
            android:background="@color/color_background_dark">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:layout_marginTop="@dimen/_10pxh">
            <TextView
                android:id="@+id/lbl_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Products Detail"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_8pxh"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="@dimen/_10pxh"
                android:background="@drawable/ic_baseline_camera_alt_24"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_11pxh">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="180sp">
                        <TextView
                            android:id="@+id/lbl_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="MRP:"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/product_perice_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="8dp"
                            android:text="180.00"
                            android:textSize="18sp"
                            android:textColor="@color/color_text_secondary_dark"
                            android:fontFamily="@font/overpassromanmedium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10pxh"
            android:layout_height="2sp"
            android:background="@color/color_card_dark" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:text="Item Total"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:text="180.00"
                android:textSize="18sp"
                android:textColor="@color/color_text_secondary_dark"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_payable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginStart="5sp"
                android:text="Payable"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/overpassbold"/>

            <TextView
                android:id="@+id/payable_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginStart="235dp"
                android:text="180.00"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/overpassbold"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15pxh"
            android:orientation="vertical"
            android:background="@color/color_background_dark">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:layout_marginTop="@dimen/_10pxh">
            <TextView
                android:id="@+id/lbl_payment_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Payment Detail"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_8pxh"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Feb 05, 2023"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="85dp"
                android:text="CASH"
                android:textSize="18sp"
                android:fontFamily="@font/overpassromanmedium"/>
            <TextView
                android:id="@+id/total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="80dp"
                android:text="180.00"
                android:textSize="18sp"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp">

            <TextView
                android:id="@+id/lbl_Due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5sp"
                android:text="Due"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/due_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="300dp"
                android:text="0.00"
                android:textSize="18sp"
                android:textColor="@color/color_text_secondary_dark"
                android:fontFamily="@font/overpassromanmedium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/color_card_dark"
            android:layout_marginTop="5dp"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
