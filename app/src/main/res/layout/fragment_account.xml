<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sp"
    tools:context=".fragments.AccountFragment"
    tools:ignore="HardcodedText"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_29pxv"
        android:layout_marginEnd="@dimen/_1pxh"
        android:gravity="start"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_60pxh"
            android:layout_height="@dimen/_70pxh"
            android:layout_marginTop="@dimen/_8pxh"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_weight="0.68"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                style="@style/txtHKGroteskbold20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hi, Admin"
                android:textColor="#78909C" />

            <TextView
                style="@style/txtHKGroteskmedium15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/textcolor"
                android:text="Welcome to Nilkanth Medical store"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvEditProfile"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="Edit Profile"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_baseline_contact_support_24" />

    <TextView
        android:id="@+id/tvManageContactRequests"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="Contact Request"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_cancel" />

    <TextView
        android:id="@+id/tvManageTerms"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="Terms &amp; Conditions"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_baseline_contact_support_24" />

    <TextView
        android:id="@+id/tvManagePrivacy"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="Privacy Policy"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_baseline_contact_support_24" />

    <TextView
        android:id="@+id/tvManageFAQ"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="FAQ"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/img_faq" />

    <TextView
        android:id="@+id/tvManageAboutUs"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="About Us"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_baseline_contact_support_24" />

    <TextView
        android:id="@+id/tvManageLogout"
        style="@style/txtHKGroteskmedium15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:drawablePadding="@dimen/_13pxh"
        android:ellipsize="end"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/_1pxh"
        android:singleLine="true"
        android:text="Logout"
        android:textColor="#757575"
        app:drawableEndCompat="@drawable/img_arrow_right"
        app:drawableStartCompat="@drawable/ic_baseline_contact_support_24" />
</LinearLayout>