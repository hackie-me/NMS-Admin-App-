<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment"
    tools:ignore="HardcodedText"
    android:background="@color/background">

    <com.straiberry.android.charts.view.HorizontalBarChartView
        android:id="@+id/horizontalBarChartViewBrushingDigit"
        android:layout_width="310dp"
        android:layout_height="170dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:focusable="false"
        app:chart_barsRadius="17dp"
        app:chart_grid="full"
        app:chart_horizontal_y_label_type="fromZeroToSeven"
        app:chart_labelsSize="8sp"
        app:chart_spacing="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="26dp"
        app:fab_progress="0"
        app:fab_progress_indeterminate="false"
        app:fab_progress_max="100"
        app:menu_animationDelayPerItem="50"
        app:menu_buttonSpacing="0dp"
        app:menu_colorNormal="@color/color_primary"
        app:menu_colorPressed="@color/color_blue"
        app:menu_colorRipple="@color/white"
        app:menu_icon="@drawable/ic_baseline_add_24"
        app:menu_labels_colorRipple="@color/color_accent"
        app:menu_labels_ellipsize="end"
        app:menu_labels_maxLines="1"
        app:menu_labels_singleLine="true"
        app:menu_labels_textColor="@color/white">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24"
            app:fab_colorNormal="@color/color_blue_light"
            app:fab_label="Option 1"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_settings_24"
            app:fab_colorNormal="@color/color_blue_light"
            app:fab_label="Option 2"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:fab_colorNormal="@color/color_blue_light"
            app:fab_label="Option 3"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</LinearLayout>