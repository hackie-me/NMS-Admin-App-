<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/categoryImage"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2pxh"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="@dimen/_2pxh"
                android:background="@color/color_blue_dark"
                android:contentDescription="Product Thumbnail"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5sp"
        android:layout_marginStart="@dimen/_115pxh">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/category_name"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6sp"
                android:text="Category Name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/deleteCategory"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="6sp"
                android:background="@drawable/ic_delete"/>
        </LinearLayout>
        <TextView
            android:id="@+id/category_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5sp"
            android:justificationMode="inter_word"
            android:text="Category description"
            android:textColor="@color/color_text_secondary_dark"
            android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
